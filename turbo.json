{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": [
        "build",
        "lint",
        "fix"
      ],
      "outputs": []
    },
    "start-storybook": {
      "cache": false
    },
    "build-storybook": {
      "outputs": [
        "dist/**"
      ]
    },
    "fix": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    }
  }
}