{
  "name": "editor",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react/editor/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/editor",
        "main": "packages/react/editor/src/index.ts",
        "tsConfig": "packages/react/editor/tsconfig.lib.json",
        "assets": [
          "packages/react/editor/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/react/editor/**/*.{ts,tsx,js,jsx}",
          "packages/react/editor/package.json"
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/packages/{projectName}"
      }
    }
  },
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/packages/{projectName}",
        "currentVersionResolver": "git-tag"
      }
    }
  }
}