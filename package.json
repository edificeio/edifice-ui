{
  "name": "root",
  "private": true,
  "description": "Edifice UI Frontend Library",
  "homepage": "https://github.com/opendigitaleducation/edifice-frontend-framework#readme",
  "bugs": {
    "url": "https://github.com/opendigitaleducation/edifice-frontend-framework/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opendigitaleducation/edifice-frontend-framework.git"
  },
  "license": "AGPL-3.0",
  "author": "Edifice",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check:editor": "package-check --cwd=packages/react/editor",
    "check:icons": "package-check --cwd=packages/react/icons",
    "check:react": "package-check --cwd=packages/react/ui",
    "clean": "rm -rf */**/node_modules && rm -rf node_modules && rm -f pnpm-lock.yaml && rm -rf */**/dist && rm -rf packages/**/.turbo",
    "clean:dist": "rm -rf */**/dist",
    "clean:lock": "rm -f pnpm-lock.yaml",
    "clean:modules": "rm -rf */**/node_modules",
    "clean:storybook": "rm -rf dist",
    "clean:turbo": "rm -rf packages/**/.turbo",
    "docs": "storybook dev -p 6006",
    "docs:build": "storybook build --docs -o dist/ && cp -R packages/react/icons/assets/ dist/icons/",
    "docs:preview": "npx http-server ./dist",
    "fix": "turbo run fix",
    "format": "turbo run format",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo run lint",
    "pre-commit": "pnpm run lint && pnpm run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-pure-annotations": "7.23.3",
    "@edifice.io/icons": "workspace:*",
    "@skypack/package-check": "0.2.2",
    "@storybook/addon-a11y": "7.6.6",
    "@storybook/addon-essentials": "7.6.6",
    "@storybook/addon-interactions": "7.6.6",
    "@storybook/addon-links": "7.6.6",
    "@storybook/blocks": "7.6.6",
    "@storybook/manager-api": "7.6.6",
    "@storybook/react": "7.6.6",
    "@storybook/react-vite": "7.6.6",
    "@storybook/testing-library": "0.2.2",
    "@storybook/theming": "7.6.6",
    "@turbo/gen": "2.0.14",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "@vitejs/plugin-react": "4.3.1",
    "@vitejs/plugin-react-swc": "3.7.0",
    "eslint": "8.56.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "eslint-plugin-storybook": "0.6.15",
    "husky": "8.0.3",
    "lerna": "8.0.1",
    "prettier": "3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup-plugin-pure": "^0.2.1",
    "rollup-plugin-visualizer": "5.12.0",
    "storybook": "7.6.6",
    "turbo": "2.0.14",
    "typescript": "5.3.3",
    "vite": "5.4.2",
    "vite-plugin-dts": "4.0.3"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": "18 || 20"
  }
}